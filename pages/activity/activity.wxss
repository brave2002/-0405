::-webkit-scrollbar{
  display: none;
}
/* navBar */
.navbar{
  padding: 12rpx;
}
.scroll{
  width: 100%;  
  overflow: hidden;
  white-space: nowrap;
}
.navbar .item{
  display: inline-block;
  /* width: 200rpx; */
  /* background-color: #F7D8C4; */
