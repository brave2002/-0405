/* components/detail/detail.wxss */
.detail{
  display: flex;
  padding: 30rpx 20rpx 0;
  justify-content: space-between;
  align-items: center;
}
.detail .img{
  width: 200rpx;
  height: 200rpx;
  background-color: aqua;
  border-radius: 50%;
}
.detail .text{
  width: 450rpx;
}
.detail .name{
  color: #ff6500;
  font-size: 40rpx;
}
.detail .d2{
  font-size: 25rpx;
  color: #777;
}
.content{
  padding: 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #777;
}
.content .skill{
  font-size: 40rpx;
  font-weight: bold;
}
