  text-align: center;
  width: 150rpx;
  padding: 10rpx 20rpx;
  background-color: #eee;
  color: #555;
  border-radius: 30rpx;
}
/* 添加active */
.navbar .item.active{
  color: #ff6500;
  background-color: #F7D8C4;
}